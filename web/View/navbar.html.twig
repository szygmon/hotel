<script type="text/javascript" >
    $('.removeNotif').on('click', function () {
        var nid = $(this).attr('data-notifid');
        $(this).parent().remove();
        var url = '{{ url('Home/removeNotif') }}';

        // Send the data using post
        var posting = $.post(url, {id: nid});
        posting.done(function () {
            var c = $('#notifscounter').html();
            var nc = c - 1;
            $('#notifscounter').empty().append(nc);
            if (nc == 0) {
                $('#notifscountern').remove();
            } else {
                $('#notifscountern').empty().append(nc);
            }
        });
    });
</script>