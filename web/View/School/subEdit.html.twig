{% extends './base.html.twig' %}

{% block title %}eDziennik AMN - przedmioty{% endblock %}

{% block content %}
    {% if info != 'brak' %}
        {% if info.col == 'red' %}               
            <div class="alert alert-danger" role="alert">
            {% else %}
                <div class="alert alert-success" role="alert">
                {% endif %}

                {{ info.inf }}
            </div>
        {% endif %}
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Szko≈Ça
                <small>Edycja przedmiotu</small>
            </h1>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="box box-primary">
                <div class="box-header">
                    <i class="ion ion-clipboard"></i>
                    <h3 class="box-title">Dodaj przedmiot</h3>
                </div><!-- /.box-header -->
                <div class="box-body">

                    <form name="inputform" method="POST" action="{{ url('School/subjects', {'action': 'add'}) }}">


                        <div class="input-group">
                            <span class="input-group-addon" >Nazwa przedmiotu:</span>
                            <input type="text" name="name" value="" class="form-control" style="width:250px;" />
                        </div>

                        <div class="box-footer clearfix no-border">
                            <input type="submit" name="save" value="Zapisz" class="btn btn-default pull-right" />
                            <input type="submit" name="saveAndAdd" value="Zapisz i nowy" class="btn btn-default pull-right" />
                        </div>

                    </form>
                </div><!-- /.box-body -->

            </div><!-- /.box -->
        </section>

    <script type="text/javascript">
        $("#school-category-sidebar, #subjects-sidebar").addClass("treeview active");
    </script>
{% endblock %}