{% extends './base.html.twig' %}

{% block title %}eDziennik AMN - grupy{% endblock %}



{% block content %}
    {% if info != 'brak' %}
        {% if info.col == 'red' %}               
            <div class="alert alert-danger" role="alert">
            {% else %}
                <div class="alert alert-success" role="alert">
                {% endif %}

                {{ info.inf }}
            </div>
        {% endif %}

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Szkoła
                <small>Lista grup</small>
            </h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="box box-primary">
                <div class="box-header">
                    <i class="ion ion-clipboard"></i>
                    <h3 class="box-title">Grupy</h3>
                </div><!-- /.box-header -->

                <div class="box-body">
                    <ul class="todo-list">

                        {% for g in groups %}
                            <li>
                                <!-- drag handle -->
                                <span class="handle">
                                    <i class="fa fa-ellipsis-v"></i>
                                    <i class="fa fa-ellipsis-v"></i>
                                </span>
                                <!-- checkbox -->
                                <input type="checkbox" value="" name=""/>
                                <!-- todo text -->
                                <span class="text">
                                    {% if g.level > 0 %}
                                        {% for i in range(1, g.level) %}&nbsp;&nbsp;&nbsp;{% endfor %}
                                        <i class="fa fa-angle-double-right"></i> 
                                    {% endif %}
                                    {{ g.name }}
                                </span>
                                <!-- General tools such as edit or delete-->
                                <div class="tools">
                                    <a href="{{ url('School/groupEdit', {'id': g.id}) }}" class="fa fa-edit"></a>
                                    <a href="{{ url('School/groups', {'action': 'del', 'id': g.id}) }}" class="fa fa-trash-o"></a>
                                </div>
                            </li>




                        {% else %}
                            <li>
                                <span class="text">Brak grup w bazie</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div><!-- /.box-body -->

                <div class="box-footer clearfix no-border">
                    <a href="{{ url('School/groupEdit') }}" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Dodaj nową</a>
                </div>
            </div><!-- /.box -->


        </section><!-- /.Left col -->
        <script type="text/javascript">
            $("#school-category-sidebar, #groups-sidebar").addClass("treeview active");
        </script>
    {% endblock %}