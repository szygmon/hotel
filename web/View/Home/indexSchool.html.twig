{% extends './base.html.twig' %}

{% block title %}eDziennik AMN{% endblock %}

{% block content %}
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<h1>
			e-Dziennik
			<small>AMN</small>
		</h1>
	</section>

	<!-- Main content -->
	<section class="content">
		<!-- Small boxes (Stat box) -->
		<div class="row">
                    <div class="box-body text-center margin-bottom">Witaj w systemie e-Dziennik AMN!</div>
				<!-- small box -->
				
		</div><!-- /.row -->
		<!-- Main row -->
		<div class="row">
			<!-- Left col -->
			<section class="col-lg-7 connectedSortable">
				
				<!-- quick email widget -->
				<div class="box box-info">
					<div class="box-header">
						<i class="fa fa-envelope"></i>
						<h3 class="box-title">Wiadomość</h3>
						<!-- tools box -->
						<div class="pull-right box-tools">
							<button class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
						</div><!-- /. tools -->
					</div>
					<div class="box-body">
						<form action="#" method="post">
							<div class="form-group">
								<input type="email" class="form-control" name="emailto" placeholder="Odbiorca"/>
							</div>
							<div class="form-group">
								<input type="text" class="form-control" name="subject" placeholder="Tytuł"/>
							</div>
							<div>
								<textarea class="textarea" placeholder="Wiadomość" style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
							</div>
						</form>
					</div>
					<div class="box-footer clearfix">
						<button class="pull-right btn btn-default" id="sendEmail">Wyślij <i class="fa fa-arrow-circle-right"></i></button>
					</div>
				</div>

			</section><!-- /.Left col -->
			<!-- right col (We are only adding the ID to make the widgets sortable)-->
			<section class="col-lg-5 connectedSortable">

				<!-- Calendar -->
				<div class="box box-solid bg-green-gradient">
					<div class="box-header">
						<i class="fa fa-calendar"></i>
						<h3 class="box-title">Aktualizacje</h3>
						<!-- tools box -->
						<div class="pull-right box-tools">
							<!-- button with a dropdown -->
							<button class="btn btn-success btn-sm" data-widget="collapse"><i class="fa fa-minus"></i></button>
							<button class="btn btn-success btn-sm" data-widget="remove"><i class="fa fa-times"></i></button>
						</div><!-- /. tools -->
					</div><!-- /.box-header -->
					<div class="box-body no-padding">
						<!--The calendar -->
						<div id="calendar" style="width: 100%"></div>
					</div><!-- /.box-body -->
					<div class="box-footer text-black">
						<div class="row">
							<div class="col-sm-6">
								<!-- Progress bars -->
								<div class="clearfix">
									<span class="pull-left">Konto rodzica</span>
									<small class="pull-right">50%</small>
								</div>
								<div class="progress xs">
									<div class="progress-bar progress-bar-green" style="width: 50%;"></div>
								</div>

								<div class="clearfix">
									<span class="pull-left">Wiadomości</span>
									<small class="pull-right">10%</small>
								</div>
								<div class="progress xs">
									<div class="progress-bar progress-bar-green" style="width: 10%;"></div>
								</div>
							</div><!-- /.col -->
							<div class="col-sm-6">
								<div class="clearfix">
									<span class="pull-left">Wykresy ocen</span>
									<small class="pull-right">5%</small>
								</div>
								<div class="progress xs">
									<div class="progress-bar progress-bar-green" style="width: 5%;"></div>
								</div>

								<div class="clearfix">
									<span class="pull-left">Eksport danych</span>
									<small class="pull-right">0%</small>
								</div>
								<div class="progress xs">
									<div class="progress-bar progress-bar-green" style="width: 0%;"></div>
								</div>
							</div><!-- /.col -->
						</div><!-- /.row -->
					</div>
				</div><!-- /.box -->

			</section><!-- right col -->
		</div><!-- /.row (main row) -->

	</section><!-- /.content -->
{% endblock %}
