{% extends './baseSP.html.twig' %}

{% block title %}{{ settings.sitename }} - kontakt{% endblock %}
{% block head %}
    <script src="{{ url('template') }}/js/jquery.validate.min.js" type="text/javascript"></script> 
{% endblock %}
{% block body %}
    <script type="text/javascript">
        $("#n-contact").addClass("active");
        $(function () {
            $(".banner").toggleClass("banner1");
        });
    </script>

</div>		
<div class="contact">
    <div class="container">
        {{ Notify.r }}
        <div id="error-note" ></div>
        </br>
        <div class="contact-top">
            <h3>SKONTAKTUJ SIĘ Z NAMI</h3>
        </div>
        <div class="contact-bottom">
            <form   method="post" id="contactform" name="contactform"> 
                <input placeholder="Imię i nazwisko"  type="text" name="name" id="name"  />
                <input placeholder="E-mail" type="text" name="email" id="email" />
                <input type="text" placeholder="Telefon" name="phone" id="phone" />
                <textarea placeholder="Wiadomość" name="content" id="content" style="resize:none"></textarea>
                <div class="clearfix"> </div>
                <div class="submit-btn">
                    <input class="submit-btn" type="submit" value="Wyślij">
                </div>
            </form>
        </div>
        <!--end-contact-->
    </div>
</div>
<script type="text/javascript">
    jQuery.validator.addMethod("notEqual", function (value, element, param) {
        return this.optional(element) || value != param;
    }, "Wpisz wartość inną niż domyślna");
    $('#contactform').validate({// initialize the plugin
        errorClass: "my-error-class",
        errorLabelContainer: "#error-note",
        wrapper: "li",
        rules: {
            name: {
                required: true,
                minlength: 4,
                notEqual: "Imię i nazwisko"
            },
            content: {
                required: true,
                maxlength: 500,
                notEqual: "Wiadomość"
            },
            email: {
                required: true,
                email: true,
                notEqual: 'E-mail'
            }
        },
        messages: {
            name: "Podanie nazwy użytkownika jest wymagane (nazwa użytkownika musi zawierać co najmniej 4 znaki)",
            content: "Pole wiadomość jest wymagane, może zawierać maksymalnie 500 znaków",
            email: "Podany e-mail jest nieprawidłowy"
        }
    });

</script>
{% endblock %}