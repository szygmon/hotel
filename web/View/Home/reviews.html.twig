{% extends './baseSP.html.twig' %}

{% block title %}Hotel JM{% endblock %}

{% block body %}
    <script type="text/javascript">
        $(".banner").toggleClass("banner1");
        $("#n-offert").addClass("active");
    </script> 
</div>		
<!-- banner -->
<!-- offers -->

<div class="details">
    <div class="container">
        <div class="single-top no-padding">
            <div class="col-md-4 no-margin guestbook-padding">
                <a>Księga gości</a>
                <p>Poznaj opinie naszych gości.<br/><a href="#reviews" >118 zweryfikowanych recenzji gości</a></p>
            </div>
            <div class="col-md-8 no-margin guestbook-padding guestbook-bg">
                <a href="#"><img src="{{ url('template') }}/images/14.jpg" class="img-responsive" alt=""></a>
                <p> lalala</p>
                {#<a href="#"><img src="{{ url('template') }}/images/14.jpg" class="img-responsive" alt=""></a>#}
            </div>
            <div class="clearfix"> </div>
        </div>
        <div id="reviews">
            {% for r in rooms %}
                <div class="single-top">
                    <div class="col-md-6 single-left">
                        <a href="#"><img src="{{ url('template') }}/images/14.jpg" class="img-responsive" alt=""></a>
                    </div>
                    <div class="col-md-6 single-right">
                        <h3><a href="#">{{ r.name }}</a> <span class="badge badge-primary"><i class="glyphicon glyphicon-user room-info"></i> {{ r.users }}</span> <span class="badge badge-success">{{ r.cost }} zł</span></h3>
                        <p>{{ r.description }}</p>

                        <div class="sinbt">
                            <span class="button-checkbox">
                                <button type="button" class="btn btn-xs" data-color="primary">Wybieram</button>
                                <input type="checkbox" name="room[]" class="hidden" value="{{ r.id }}" />
                            </span>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>               
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}