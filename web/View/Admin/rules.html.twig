{% extends './base.html.twig' %}

{% block title %}HOTEL JM - regulamin{% endblock %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            HOTEL
            <small>Regulamin</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        {{ Notify.r }}
        <div class="box box-primary">
            <div class="box-header">
                <i class="ion ion-clipboard"></i>
                <h3 class="box-title">Regulamin</h3>
            </div><!-- /.box-header -->
            <div class="box-body">

                <form name="inputform" method="POST" action="{{ url('Admin/rules', {'action': 'save'}) }}">


                    <div class="input-group">
                        <span class="input-group-addon" >Regulamin</span>
                        <textarea name="value" class="form-control" rows="10" cols="50">{{rules.value}}</textarea>
                    </div>

                    <div class="box-footer clearfix no-border">
                        <input type="submit" name="save" value="Zapisz" class="btn btn-default pull-right" />
                    </div>

                </form>
            </div><!-- /.box-body -->

        </div><!-- /.box -->


    </section><!-- /.Left col -->

</div><!-- /.row (main row) -->
<script type="text/javascript">
    $("#settings-category-sidebar, #rules-sidebar").addClass("treeview active");
</script>
{% endblock %}
