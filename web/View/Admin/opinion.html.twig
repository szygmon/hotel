{% extends './base.html.twig' %}

{% block title %}HOTEL JM - wiadomości{% endblock %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Hotel
            <small>Opinie</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        {{ Notify.r }}
        <!-- Small boxes (Stat box) -->

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">
                <!-- Custom tabs (Charts with tabs)-->
                <div class="box box-primary alert-">
                    <div class="box-header">
                        <i class="fa fa-envelope-o"></i>
                        <h3 class="box-title">Opinia</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <h4 class="no-margin">{{ opinion.user.givenName }} {{ opinion.user.familyName }}</h4>
                        <h5>E-mail: {{ opinion.user.email}}, telefon: {{ opinion.user.phone }}</h5>
                        <h6>{% for i in 1..opinion.rating %}<i class="fa fa-star text-orange"></i>{% endfor %}</h6>
                            {{ opinion.content }}
                    </div><!-- /.box-body -->
                    <div class="box-footer clearfix no-border">
                        <a href="{{ url('Admin/opinions', {'action': 'accept', 'id': opinion.id}) }}" class="btn btn-success pull-right"><i class="fa fa-check"></i> Akceptuj</a>
                        <a href="{{ url('Admin/opinions', {'action': 'remove', 'id': opinion.id}) }}" class="btn btn-danger pull-right"><i class="fa fa-close"></i> Usuń</a>
                    </div>
                </div><!-- /.box -->

            </section><!-- /.Left col -->
        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
    <script type="text/javascript">
        $("#mails-category-sidebar, #mail-sidebar").addClass("treeview active");
    </script>
{% endblock %}
