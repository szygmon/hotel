{% extends './base.html.twig' %}

{% block title %}HOTEL JM - pokoje{% endblock %}
{% block head %}
    <link href="{{ url('template') }}/css/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
{% endblock %}
{% block content %}


    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Hotel
            <small>Lista rezerwacji</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        {{ Notify.r }}

        <div class="box box-primary">
            <div class="box-header">
                <i class="ion ion-clipboard"></i>
                <h3 class="box-title">Lista rezerwacji</h3>
            </div><!-- /.box-header -->

            <div class="box-body">
                <!-- /.box-header -->
                <div class="box-body ">
                    <table id="reservations-table" class="table table-bordered table-hover dataTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Użytkownik</th>
                                <th>Od</th>
                                <th>Do</th>
                                <th>Zarezerwował</th>
                                <th>Status</th>
                                <th>Pokoje</th>
                                {% if action != 'old' %}<th>Opcje</th>{% endif %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for r in reservations %}
                                <tr>
                                    <td>{{ r.id }}</td>
                                    <td>{% if r.uid %}{{ r.givenName}} {{ r.familyName }}{% else %}{{ r.guest }}{% endif %}</td>
                                    <td>{{ r.fromDate|date('Y-m-d') }}</td>
                                    <td>{{ r.toDate|date('Y-m-d') }}</td>
                                    <td>{{ r.reservationDate|date('Y-m-d') }}</td>
                                    <td class="center">{% if r.paid %}<a href="{{ url('Admin/reservations', {'action': 'noPaid', 'id': r.id}) }}"><span class="badge bg-green"><i class="fa fa-fw fa-check"></i></span></a>{% else %}<a href="{{ url('Admin/reservations', {'action': 'paidConfirm', 'id': r.id}) }}"><span class="badge bg-red"><i class="fa fa-fw fa-warning"></i></span></a>{% endif %}</td>
                                    <td></td>
                                    {% if action != 'old' %}
                                    <td>
                                        <a href="{{ url('Admin/reservations', {'action': 'del', 'id': r.id}) }}" class="fa fa-trash-o"></a>
                                    </td>
                                    {% endif %}
                                </tr>

                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

    <div class="box-footer clearfix no-border">
        <a href="{{ url('Admin/editRoom') }}" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Dodaj nową</a>
    </div>
</section><!-- /.Left col -->
<script src="{{ url('template') }}/js/jquery.dataTables.js" type="text/javascript"></script>
<script src="{{ url('template') }}/js/dataTables.bootstrap.js" type="text/javascript"></script>
<script type="text/javascript">
        $("#reservations-category-sidebar, {% if action == 'old' %}#oldreservations-sidebar{% else %}#reservations-sidebar{% endif %}").addClass("treeview active");

        $('#reservations-table').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": false,
            "aoColumnDefs": [{
                    'bSortable': false,
                    'aTargets': [0]
                }]
        });
</script>

{% endblock %}