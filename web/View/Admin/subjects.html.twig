{% extends './base.html.twig' %}

{% block title %}eDziennik AMN - przedmioty{% endblock %}




{% block content %}
   
    {% if info != 'brak' %}
        {% if info.col == 'red' %}               
            <div class="alert alert-danger" role="alert">
            {% else %}
                <div class="alert alert-success" role="alert">
                {% endif %}

                {{ info.inf }}
            </div>
        {% endif %}


            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Szkoła
                    <small>Lista przedmiotów</small>
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">

                <!-- TO DO List -->
                <div class="box box-primary">
                    <div class="box-header">
                        <i class="ion ion-clipboard"></i>
                        <h3 class="box-title">Przedmioty</h3>
                    </div><!-- /.box-header -->

                    <div class="box-body">
                        <ul class="todo-list">
                            {% for s in subjects %}
                                <li>
                                    <!-- drag handle -->
                                    <span class="handle">
                                        <i class="fa fa-ellipsis-v"></i>
                                        <i class="fa fa-ellipsis-v"></i>
                                    </span>
                                    <!-- checkbox -->
                                    <input type="checkbox" value="" name=""/>
                                    <!-- todo text -->
                                    <span class="text">{{ s.subject }}</span>
                                    <!-- General tools such as edit or delete-->
                                    <div class="tools">
                                        
                                        <a href="{{ url('School/subjects', {'action': 'del', 'id': s.id}) }}" class="fa fa-trash-o"></a>
                                    </div>
                                </li>
                            {% else %}
                                <li>
                                    <span class="text">Brak przedmiotów w bazie</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </div><!-- /.box-body -->

                    <div class="box-footer clearfix no-border">
                        <a href="{{ url('School/subEdit') }}" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Dodaj nowy</a>
                    </div>
                </div><!-- /.box -->


            </section><!-- /.Left col -->

    <script type="text/javascript">
        $("#school-category-sidebar, #subjects-sidebar").addClass("treeview active");
    </script>

{% endblock %}
