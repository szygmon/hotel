{% extends './base.html.twig' %}

{% block title %}{{ settings.sitename }} - wiadomości{% endblock %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Hotel
            <small>Wiadomości</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        {{ Notify.r }}
        <!-- Small boxes (Stat box) -->

        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">
                <!-- Custom tabs (Charts with tabs)-->
                <div class="box box-primary alert-">
                    <div class="box-header">
                        <i class="fa fa-envelope-o"></i>
                        <h3 class="box-title">Wiadomość</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <h4 class="no-margin">{{ mail.name }}</h4>
                        <h5>E-mail:{{ mail.email}}, telefon: {{ mail.phone }}</h5>
                        {{ mail.content }}
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

                <!-- quick email widget -->
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-envelope"></i>
                        <h3 class="box-title">Odpowiedź</h3>
                        <!-- tools box -->
                        <div class="pull-right box-tools">
                            <button class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                        </div><!-- /. tools -->
                    </div>
                    <form action="{{ url('Admin/mails', {'action': 'reply', 'id': mail.id}) }}" method="post">
                        <div class="box-body">

                            <div class="form-group">
                                <input type="email" class="form-control" name="emailto" placeholder="E-mail:" value="{{ mail.email }}" />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="subject" placeholder="Temat"/>
                            </div>
                            <div>
                                <textarea class="textarea" placeholder="Wiadomość" name="message" style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                            </div>

                        </div>
                        <div class="box-footer clearfix">
                            {#<input type="submit" name="reply" value="Wyślij" class="btn btn-default pull-right" />#}
                            <button class="pull-right btn btn-default" id="sendEmail" name="reply">Wyślij <i class="fa fa-arrow-circle-right"></i></button>
                        </div>
                    </form>
                </div>
            </section><!-- /.Left col -->
        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
    <script type="text/javascript">
        $("#mails-category-sidebar, #mail-sidebar").addClass("treeview active");
    </script>
{% endblock %}
