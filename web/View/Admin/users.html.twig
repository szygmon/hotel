{% extends './base.html.twig' %}

{% block title %}HOTEL JM - pokoje{% endblock %}

{% block content %}


    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Hotel
            <small>Lista rezerwacji</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        {{ Notify.r }}

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Rezerwacje pokoi</h3>

                        {#<div class="box-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control pull-right" placeholder="Szukaj">

                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>#}
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Użytkownik</th>
                                    <th>Od</th>
                                    <th>Do</th>
                                    <th>Zarezerwował</th>
                                    <th>Status</th>
                                    <th>Pokoje</th>
                                    <th>Opcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for r in reservations %}
                                    <tr>
                                        <td>{{ r.id }}</td>
                                        <td>{% if r.uid %}{{ r.givenName}} {{ r.familyName }}{% else %}{{ r.guest }}{% endif %}</td>
                                        <td>{{ r.fromDate|date('Y-m-d') }}</td>
                                        <td>{{ r.toDate|date('Y-m-d') }}</td>
                                        <td>{{ r.reservationDate|date('Y-m-d') }}</td>
                                        <td>{% if r.paid %}<span class="badge bg-green"><i class="fa fa-fw fa-check"></i></span>{% else %}<span class="badge bg-red"><i class="fa fa-fw fa-warning"></i></span>{% endif %}</td>
                                        <td></td>
                                        <td>
                                            <a href="{{ url('Admin/reservations', {'action': 'del', 'id': r.id}) }}" class="fa fa-trash-o"></a>
                                        </td>
                                    </tr>

                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>

        <div class="box-footer clearfix no-border">
            <a href="{{ url('Admin/editReservation') }}" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Dodaj nową</a>
        </div>
    </section><!-- /.Left col -->

    <script type="text/javascript">
        $("#reservations-category-sidebar, {% if action == 'old' %}#oldreservations-sidebar{% else %}#reservations-sidebar{% endif %}").addClass("treeview active");
    </script>

{% endblock %}