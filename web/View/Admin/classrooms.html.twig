{% extends './base.html.twig' %}

{% block title %}eDziennik AMN - sale lekcyjne{% endblock %}

{% block content %}

    {% if info != 'brak' %}
        {% if info.col == 'red' %}               
            <div class="alert alert-danger" role="alert">
            {% else %}
                <div class="alert alert-success" role="alert">
                {% endif %}

                {{ info.inf }}
            </div>
        {% endif %}

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Szkoła
                <small>Lista sal lekcyjnych</small>
            </h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- TO DO List -->
            <div class="box box-primary">
                <div class="box-header">
                    <i class="ion ion-clipboard"></i>
                    <h3 class="box-title">Sale lekcyjne</h3>
                </div><!-- /.box-header -->

                <div class="box-body">
                    <ul class="todo-list">
                        {% for c in classrooms %}
                            <li>
                                <!-- drag handle -->
                                <span class="handle">
                                    <i class="fa fa-ellipsis-v"></i>
                                    <i class="fa fa-ellipsis-v"></i>
                                </span>
                                <!-- checkbox -->
                                <input type="checkbox" value="" name=""/>
                                <!-- todo text -->
                                <span class="text">{{ c.name }}</span>
                                {% if c.seats %}
                                    <span style="margin-left: 10px;"> <i class="fa fa-users"></i> {{ c.seats }} miejsc</span>
                                {% endif %}
                                {% if c.projector %}
                                    <span style="margin-left: 10px;"> <i class="fa fa-camera"></i> projektor</span>
                                {% endif %}
                                {% if c.others %}
                                    <span style="margin-left: 10px;"> <i class="fa fa-info"></i> {{ c.others }}</span>
                                {% endif %}
                                <!-- General tools such as edit or delete-->
                                <div class="tools">
                                    <a href="{{ url('School/classroomEdit', {'id': c.id}) }}" class="fa fa-edit"></a>
                                    <a href="{{ url('School/classrooms', {'action': 'del', 'id': c.id}) }}" class="fa fa-trash-o"></a>
                                </div>
                            </li>
                        {% else %}
                            <li>
                                <span class="text">Brak sal lekcyjnych w bazie</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div><!-- /.box-body -->

                <div class="box-footer clearfix no-border">
                    <a href="{{ url('School/classroomEdit') }}" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Dodaj nową</a>
                </div>
            </div><!-- /.box -->


        </section><!-- /.Left col -->
        <script type="text/javascript">
            $("#school-category-sidebar, #classrooms-sidebar").addClass("treeview active");
        </script>

    {% endblock %}
