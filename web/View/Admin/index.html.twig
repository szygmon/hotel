{% extends './base.html.twig' %}

{% block title %}{{ settings.sitename }} - administracja{% endblock %}

{% block content %}
    <section class="content-header">
        <h1>
            Hotel
            <small>Control panel</small>
        </h1>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>{{ reservationsConfirm }}</h3>
                        <p>Rezerwacji</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-calendar"></i>
                    </div>
                    <a href="{{ url('Admin/reservations') }}" class="small-box-footer">Zarządzaj<i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>{{ reservationsNotConfirm }}</h3>
                        <p>Nieopłaconych</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="{{ url('Admin/reservations') }}" class="small-box-footer">Zarządzaj <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>{{ rooms }}</h3>
                        <p>Pokoi</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-stalker"></i>
                    </div>
                    <a href="{{ url('Admin/rooms') }}" class="small-box-footer">Zarzadzaj <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>{{ users | length }}</h3>
                        <p>Użytkowników</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="{{ url('Admin/users') }}" class="small-box-footer">Zarządzaj <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <section class="col-lg-7 connectedSortable">
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-envelope"></i>
                        <h3 class="box-title">Szybki E-mail</h3>

                        <div class="pull-right box-tools">
                            <button class="btn btn-info btn-sm" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <button class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                        </div><!-- /. tools -->
                    </div>
                    <div class="box-body">
                        <form action="#" method="post">
                            <div class="form-group">
                                <select class="form-control" name="emailto" placeholder="E-mail" >
                                    <option value="0">E-mail</option>
                                    {% for u in users %}
                                        <option value="{{ u.email }}">{{ u.email }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="subject" placeholder="Tytuł"/>
                            </div>
                            <div>
                                <textarea class="textarea"  placeholder="Wiadomość" style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px; resize: none"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="box-footer clearfix">
                        <button class="pull-right btn btn-info" id="sendEmail">Wyślij <i class="fa fa-arrow-circle-right"></i></button>
                    </div>
                </div>
            </section>
            <section class="col-lg-5 connectedSortable">
                <div class="box box-solid bg-green-gradient">
                    <div class="box-header">
                        <i class="fa fa-calendar"></i>
                        <h3 class="box-title">Pokoje dziś</h3>
                        <div class="pull-right box-tools">
                            <div class="btn-group">
                                <button class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars"></i></button>
                                <ul class="dropdown-menu pull-right" role="menu">
                                    <li><a href="#">Dodaj rezerwacje</a></li>
                                    <li><a href="#">Lista rezerwacji</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">View calendar</a></li>
                                </ul>
                            </div>
                            <button class="btn btn-success btn-sm" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <button class="btn btn-success btn-sm" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div>
                    <div class="box-body no-padding">
                        <div id="calendar" style="width: 100%"></div>
                    </div>
                    <div class="box-footer text-black">
                        <div class="row">

                            {% for r in available %}
                                <div class="col-sm-6">
                                    <div class="info-box bg-green">
                                        <span class="info-box-icon"><i class="fa fa-bed"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text">{{ r.name }}</span>
                                            <span class="info-box-number">{{ r.number }}</span>

                                            <div class="progress">
                                                <div class="progress-bar" style="width: 100%"></div>
                                            </div>
                                            <span class="progress-description">
                                                Wolny
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            {% for r in reserved %}
                                <div class="col-sm-6">

                                    <div class="info-box bg-red">
                                        <span class="info-box-icon"><i class="fa fa-bed"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">{{ r.name }}</span>
                                            <span class="info-box-number">{{ r.number }}</span>

                                            <div class="progress">
                                                <div class="progress-bar" style="width: 100%"></div>
                                            </div>
                                            <span class="progress-description">
                                                Zajęty
                                            </span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>

                                </div><!-- /.col -->

                            {% endfor %}
                        </div>
                    </div>
                </div>
            </section>
        </div>

    </section>
</div>
<script type="text/javascript">
    $("#dashboard-category-sidebar").addClass("treeview active");
</script>
{% endblock %}
